{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "{env:CONTEXT7_API_KEY}"
      ],
      "enabled": true
    }
  },
  "tools": {
    "context7*": false
  },
  "lsp": {
    "jdtls": {
      "disabled": true
    },
    "jdtls-lombok": {
      "command": [
        "{env:HOME}/.local/share/opencode/bin/jdtls/bin/jdtls",
        "--jvm-arg=-javaagent:{env:HOME}/dev-tools/jars/lombok.jar",
        "-configuration",
        "{env:HOME}/.local/share/opencode/bin/jdtls/config_linux",
        "-data",
        "/tmp/opencode-jdtls-data"
      ],
      "extensions": [
        ".java"
      ]
    }
  }
}
