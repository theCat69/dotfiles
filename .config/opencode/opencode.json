{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "{env:CONTEXT7_API_KEY}"
      ],
      "enabled": true
    }
  },
  "tools": {
    "context7*": false
  },
  "lsp": {
    "jdtls": {
      "disabled": true
    },
    "jdtls-lombok": {
      "command": [
        "{env:HOME}/dev-tools/compilers/java/jdk-21.0.10+7/bin/java",
        "-javaagent:{env:HOME}/dev-tools/jars/lombok.jar",
        "-jar",
        "{env:HOME}/.local/share/opencode/bin/jdtls/plugins/org.eclipse.equinox.launcher_1.7.100.v20251111-0406.jar",
        "-configuration",
        "{env:HOME}/.local/share/opencode/bin/jdtls/config_linux",
        "-data",
        "/tmp/opencode-jdtls-data",
        "-Declipse.application=org.eclipse.jdt.ls.core.id1",
        "-Dosgi.bundles.defaultStartLevel=4",
        "-Declipse.product=org.eclipse.jdt.ls.core.product",
        "-Dlog.level=ALL",
        "--add-modules=ALL-SYSTEM",
        "--add-opens java.base/java.util=ALL-UNNAMED",
        "--add-opens java.base/java.lang=ALL-UNNAMED"
      ],
      "extensions": [
        ".java"
      ]
    }
  }
}
